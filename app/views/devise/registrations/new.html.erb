<div class="col-md-6 well">
<h2 style="text-align: center">Sign up</h2>
  <br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <h4 ><%= f.label :name, class: 'pull-left' %>:
  <%= f.text_field :name, autofocus: true,class:"form-control" %></h4>

  <h4><%= f.label :email ,class: 'pull-left'%>:
  <%= f.email_field :email,class:"form-control"  %></h4>

  <h4><%= f.label :password,class: 'pull-left' %><% if @validatable %><% end %>: <i>(<%= @minimum_password_length %> characters minimum)</i>
    <%= f.password_field :password, autocomplete: "off",class:"form-control"  %>
    </h4>

  <h4><%= f.label :password_confirmation,class: 'pull-left' %> :
    <%= f.password_field :password_confirmation, autocomplete: "off",class:"form-control"  %></h4>

  <h4><%= f.submit "Sign up",class:"btn btn-primary pull-right" %></h4>
<% end %>

<div style="text-align: center"><%= render "devise/shared/links" %></div>
</div>
<div class="col-md-3"> </div>